@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Set password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="tab-content">
    <div class="tab-pane fade active show d-flex justify-content-center" role="tabpanel">
        <div class="col-8">
            <div class="sign__wrap">
                <form id="set-password-form" class="sign__form sign__form--profile sign__form--first" method="post">
                    <h3 class="sign__text">@ViewData["Title"]</h3>
                    <partial name="_StatusMessage" for="StatusMessage" />
                    <p class="text-info">
                        You do not have a local username/password for this site. Add a local
                        account so you can log in without an external login.
                    </p>
                    <div asp-validation-summary="ModelOnly" class="text-danger invalid-message"></div>
                    <div class="sign__group col-6">
                        <label asp-for="Input.NewPassword" class="form-label sign__text"></label>
                        <input asp-for="Input.NewPassword" class="sign__input" autocomplete="new-password" />
                        <span asp-validation-for="Input.NewPassword" class="text-danger invalid-message"></span>
                    </div>
                    <div class="sign__group col-6">
                        <label asp-for="Input.ConfirmPassword" class="form-label sign__text"></label>
                        <input asp-for="Input.ConfirmPassword" class="sign__input" autocomplete="new-password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger invalid-message"></span>
                    </div>
                    <button type="submit" class="sign__btn">Set password</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
