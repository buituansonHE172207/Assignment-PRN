@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
    Layout = "_IdentityLayout";
}

<h1>@ViewData["Title"]</h1>
<h2>Reset your password</h2>
<hr />

<form id="reset-password" method="post">
    <div asp-validation-summary="ModelOnly" class="sign__alert sign__alert-danger"></div>
    <input asp-for="Input.Code" type="hidden" />
    <div class="sign__group">
        <input asp-for="Input.Email" class="sign__input" placeholder="Email" aria-required="true" />
        <span asp-validation-for="Input.Email" class="text-danger invalid-message"></span>
    </div>
    <div class="sign__group">
        <input asp-for="Input.Password" type="password" class="sign__input" placeholder="New password" aria-required="true" />
        <span asp-validation-for="Input.Password" class="text-danger invalid-message"></span>
    </div>
    <div class="sign__group">
        <input asp-for="Input.ConfirmPassword" type="password" class="sign__input" placeholder="Confirm new password" aria-required="true" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger invalid-message"></span>
    </div>
    <button type="submit" class="sign__btn">Reset</button>
</form>
 
